{
  "name": "@coopsource/federation",
  "version": "0.0.1",
  "private": true,
  "description": "PDS abstraction layer for ATProtocol federation",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./interfaces": {
      "import": "./dist/interfaces/index.js",
      "types": "./dist/interfaces/index.d.ts"
    },
    "./local": {
      "import": "./dist/local/index.js",
      "types": "./dist/local/index.d.ts"
    },
    "./clocks": {
      "import": "./dist/clocks/index.js",
      "types": "./dist/clocks/index.d.ts"
    },
    "./email": {
      "import": "./dist/email/index.js",
      "types": "./dist/email/index.d.ts"
    },
    "./http": {
      "import": "./dist/http/index.js",
      "types": "./dist/http/index.d.ts"
    },
    "./atproto": {
      "import": "./dist/atproto/index.js",
      "types": "./dist/atproto/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@atproto/api": "^0.19.0",
    "@atproto/xrpc": "^0.7.7",
    "@coopsource/common": "workspace:*",
    "@coopsource/db": "workspace:*",
    "@ipld/car": "^5.4.2",
    "@ipld/dag-cbor": "^9.2.5",
    "cborg": "^4.5.8",
    "kysely": "^0.28.11",
    "multiformats": "^13.4.2",
    "nodemailer": "^8.0.1",
    "structured-headers": "^2.0.2",
    "pg": "^8.19.0"
  },
  "devDependencies": {
    "@coopsource/config": "workspace:*",
    "@types/nodemailer": "^7.0.11",
    "@types/pg": "^8.16.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
